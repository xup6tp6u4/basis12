#include<stdio.h>
#include<stdlib.h>
void show(int);
int main(void){
	int n;
	printf("請輸入數字:\n");
	scanf("%d",&n);
	show(n);
} 
void show(int n){
	int space;
	for(int i=n;i>0;i--){
		space=n-i;
		if(space>0){
			for(int k=0;k<space;k++){
			printf(" ");	
			}
		}
		
		for(int s=0;s<i;s++){
			printf("%c",'*');
		}
		printf("\n");
	}
}
